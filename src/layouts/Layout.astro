<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
	import TextFill from "~/utils/textfill";

	// Suppress ResizeObserver loop error - this is a known benign error
	// that occurs with virtual scrolling and dynamic resize operations
	const resizeObserverError = (e: ErrorEvent) => {
		if (
			e.message ===
				"ResizeObserver loop completed with undelivered notifications." ||
			e.message === "ResizeObserver loop limit exceeded"
		) {
			e.stopImmediatePropagation();
		}
	};
	window.addEventListener("error", resizeObserverError);

	const autoSizeElements = () => {
		var resizeElems = document.querySelectorAll(
			"*[data-textfill-resize-options]"
		);
		for (var i = 0; i < resizeElems.length; i++) {
			var parent = resizeElems[i];
			const strOptions = parent.getAttribute("data-textfill-resize-options");
			if (strOptions) {
				var options = JSON.parse(strOptions);
				TextFill(parent, options);
			}
		}
	};

	window.addEventListener("resize", autoSizeElements);
</script>
